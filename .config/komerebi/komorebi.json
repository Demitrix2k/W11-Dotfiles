{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.28/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
  "mouse_follows_focus": false,
  "window_hiding_behaviour": "Cloak",
  "floating_layer_behaviour": "Float",
  "floating_layer_placement": "None",
  "window_container_behaviour": "Create",
  "cross_monitor_move_behaviour": "Insert",
  "floating_window_aspect_ratio": "Widescreen",
  "default_workspace_padding": 10,
  "default_container_padding": 10,
  "border": true,
  "border_width": 4,
  "border_offset": -1,
  "border_style": "Square",
  "border_colours": {
    "single": "#006699",
    "stack": "#c53b53",
    "monocle": "#c53b53",
    "unfocused": "#000000",
    "floating": "#3d59a1"		
  },
  "animation": {
    "enabled": false,
    "duration": 400,
    "fps": 120,
    "style": "EaseOutExpo"
  },
  "object_name_change_title_ignore_list": [
    "Zen"
  ],
  "stackbar": {
    "height": 18,
    "mode": "Never",
    "tabs": {
      "width": 170,
      "focused_text": "#8BE9FD",
      "unfocused_text": "#b3b3b3",
      "background": "#141414"
    }
  },
  "monitors": [
    {
      "workspaces": [
			{
			"name": "laptop-mon"
			}
	    ]
	},
	{	
	"workspaces": [		
			{
			"name": "1",
			"layout": "BSP",
			"float_override": true
			},
			{
			"name": "2",
			"layout": "BSP",
			"float_override": true
			},
			{
			"name": "3",
			"layout": "BSP",
			"float_override": true
			},
			{
			"name": "4",
			"layout": "BSP"
			}
			
		]	
	}
  ]	
}